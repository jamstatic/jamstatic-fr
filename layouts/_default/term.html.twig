{% set title = page.title|title ~ ' &middot ' ~ site.title %}

{% extends 'list.html.twig' %}

    {%- block header ~%}
    <div class="container w-11/12 pt-4 md:pt-8 mx-auto lg:w-2/3 xl:w-1/2">
      <nav class="mb-6 md:mb-8 text-center text-semibold">
      {%- for category in site.taxonomies['categories']|filter(c => c != page.term and c|length > 3)|slice(0, 8) ~%}
        <a class="text-xl font-semibold capitalize text-violet-dark hover:text-rose-600 dark:text-blue-500 dark:hover:text-blue-300" href="{{ url(category.id) }}">{{ category.name }}</a>
        <span class="text-gray-600">({{ category|length }})</span>{% if not loop.last %}<span class="dark:text-blue-500"> &middot;</span>{%- endif -%}
      {%- endfor ~%}
      </nav>
      <h1 class="text-4xl font-display font-extrabold text-center text-violet-dark dark:text-blue-500">
        Articles &laquo;&nbsp;<span class="capitalize text-rose-600">{{ page.title|title }}</span>&nbsp;&raquo;
      </h1>
    </div>
    {%- endblock ~%}