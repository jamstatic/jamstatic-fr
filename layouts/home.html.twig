{% extends 'list.html.twig' %}

    {%- block jumbotron ~%}
    <div class="text-white bg-violet">
      <div class="container mx-auto max-w-[600px] py-6 w-11/12 lg:w-2/3 xl:w-1/2">
        <h1 class="flex flex-col items-end">
          {{~ include('partials/svg/jamstatic-logo-violet.svg') ~}}
          <div class="font-display lg:text-lg mt-1 mr-2">
            {{- site.baseline -}}
          </div>
        </h1>
      </div>
    </div>
    <div class="container mx-auto pt-4 md:pt-8 w-11/12 lg:w-2/3 xl:w-1/2">
      <details>
        <summary class="text-lg font-semibold text-center cursor-pointer list-none text-violet dark:text-blue-500">{% trans %}Naviguer par cat√©gories{% endtrans %}</summary>
        <nav class="mt-2 text-center text-semibold">
        {%- set categories = site.taxonomies['categories'] ~%}
        {%- for category in categories ~%}
          <a class="text-xl font-semibold capitalize text-violet-dark hover:text-rose-600 dark:text-blue-500 dark:hover:text-blue-300" href="{{ url(category.id) }}">{{ category.name }}</a>
          <span class="text-gray-600">({{ category|length }})</span>
          {%- if not loop.last -%}
          <span class="dark:text-blue-500">&nbsp;&middot;</span>
          {%- endif -%}
        {%- endfor ~%}
        </nav>
      </details>
    </div>
    {%- endblock ~%}