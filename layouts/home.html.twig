{% extends 'list.html.twig' %}

    {%- block header ~%}
    <header class="text-white bg-violet">
      <div class="py-8 mx-auto w-72 md:w-1/2 lg:w-2/5">
        <h1>{{- include('partials/svg/jamstatic-logo-violet.svg') -}}</h1>
        <div class="pr-4 text-xs text-right text-white lg:-mt-2 font-display md:text-base lg:text-lg">
          {{ site.baseline }}
        </div>
      </div>
    </header>
    <div class="container w-11/12 pt-4 md:pt-8 mx-auto lg:w-2/3 xl:w-1/2">
      <details>
        <summary class="text-lg font-semibold text-center cursor-pointer list-none text-violet dark:text-blue-500">Naviguer par cat√©gories</summary>
        <nav class="mt-2 text-center text-semibold">
        {%- for category in site.taxonomies['categories'] ~%}
          <a class="text-xl font-semibold capitalize text-violet-dark hover:text-rose-600 dark:text-blue-500 dark:hover:text-blue-300" href="{{ url(category.id) }}">{{ category.name }}</a>
          <span class="text-gray-600">({{ category|length }})</span>
          {%- if not loop.last ~%}
          <span class="dark:text-blue-500">&middot;</span>
          {%- endif ~%}
        {%- endfor ~%}
        </nav>
      </details>
    </div>
    {%- endblock ~%}