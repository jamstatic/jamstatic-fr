{% if page.paginator.pages is defined %}
{% set paginator = page.paginator %}
{% set paginator_current = paginator.current %}
{% set paginator_count = paginator.count %}
        <nav class="flex flex-row items-center text-base md:text-lg font-bold font-display text-violet dark:text-blue-500">
          {%- if paginator.links.prev is defined ~%}
          <a class="flex-auto text-left hover:underline dark:hover:text-blue-300" href="{{ url(site.pages[paginator.links.prev]) }}">&larr; {% trans %}Précédent{% endtrans %}</a>
          {%- else ~%}
          <span class="flex-auto text-left">&larr; {% trans %}Précédent{% endtrans %}</span>
          {%- endif ~%}
          <span class="flex-auto text-center">{% trans %}%paginator_current% sur %paginator_count%{% endtrans %}</span>
          {%- if paginator.links.next is defined ~%}
          <a class="flex-auto text-right hover:underline dark:hover:text-blue-300" href="{{ url(site.pages[paginator.links.next]) }}">{% trans %}Suivant{% endtrans %} &rarr;</a>
          {%- else ~%}
          <span class="flex-auto text-right">{% trans %}Suivant{% endtrans %} &rarr;</span>
          {%- endif ~%}
        </nav>
{% endif %}