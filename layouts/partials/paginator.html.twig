{% if page.paginator.pages is defined %}
{% set pagination = page.paginator %}
{% set pagination_current = pagination.current %}
{% set pagination_count = pagination.count %}
        <nav class="flex flex-row items-center text-base md:text-lg font-bold font-display text-violet dark:text-blue-500">
          {%- if pagination.links.prev is defined ~%}
          <a class="flex-auto text-left hover:underline dark:hover:text-blue-300" href="{{ url(site.pages[pagination.links.prev]) }}">&larr; {% trans %}Précédent{% endtrans %}</a>
          {%- else ~%}
          <span class="flex-auto text-left">&larr; {% trans %}Précédent{% endtrans %}</span>
          {%- endif ~%}
          <span class="flex-auto text-center">{% trans %}Page %pagination_current% sur %pagination_count%{% endtrans %}</span>
          {%- if pagination.links.next is defined ~%}
          <a class="flex-auto text-right hover:underline dark:hover:text-blue-300" href="{{ url(site.pages[pagination.links.next]) }}">{% trans %}Suivant{% endtrans %} &rarr;</a>
          {%- else ~%}
          <span class="flex-auto text-right">{% trans %}Suivant{% endtrans %} &rarr;</span>
          {%- endif ~%}
        </nav>
{% endif %}